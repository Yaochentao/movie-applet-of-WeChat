/**index.wxss**/
header {
  width: 100%;
  position: fixed;
  top: 0;
  background: #fff;
}
.search-con {
  width: 100%;
  height: 80rpx;
  background: #fff;
  display: flex;
}
.tab-con {
  margin-top: 10rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  display: flex;
  background: #fff;
}
.tab-1 , .tab-2 {
  display: inline-block;
  height: 40rpx;
  text-align: center;
  flex: 1;
  
}
.city {
  margin-left: 10rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  
}
.search {
  margin: 5rpx 20rpx 5rpx 20rpx;
  text-align: center;
  border-radius: 10rpx;
  display: inline-block;
  height: 70rpx;
  background: #f5f5f5;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #9b9b9b;
  flex: 1;
}
.movie-con {
  margin-top: 150rpx;
  width: 100%;
  flex: auto;
}
.movie-item {
  width: 100%;
  height: 280rpx;
  border-top: 1rpx solid #f1efed;
  display: flex;
}
.movie-img {
  display: inline-block;
  width: 150rpx;
  height: 220rpx;
  margin: 30rpx 20rpx 30rpx 20rpx;
}
.movie-info {
  flex: 1;
  margin: 30rpx 20rpx 0 20rpx;
}
.movie-info p {
  display: block;
}
.movie-info .name {
  font-size: 36rpx;
  font-weight: bold;
}
.movie-info .actor-info {
  font-size: 24rpx;
  color: #9b9b9b;
  line-height: 36rpx;
}
.buy {
  padding-top: 40rpx;
  width: 200rpx;
  text-align: center;
}
.buy .man-num {
  display: inline-block;
  font-size: 24rpx;
  color: #fb3b4f;
  width: 100%;
  text-align: center;
}
.buy .buy-btn {
  margin-top: 20rpx;
  display: inline-block;
  width: 132rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fb3b4f;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 10rpx;
  border: 1px solid #fb3b4f;
}
.a {
  background: black;

}
.b {
  background: yellow;

}